; train_eval_infer.config
; 2025/11/07 (C) antillia.com
; MBH-Seg25 segmentation
[model]
model         = "TensorFlowFlexUNet"

generator     =  False

image_width    = 512
image_height   = 512
image_channels = 3
input_normalize = False
normalization  = False
num_classes    = 6

base_filters   = 16
base_kernels   = (7,7)
num_layers     = 8
dropout_rate   = 0.05
dilation       = (1,1)

; Model compilation parameters
optimizer       = "Adam"

learning_rate  = 0.00005
clipvalue      = 0.5

; Specify "categorical_crossentropy" function to loss
; for categoraized(one-hot-encoded) mask 
loss           = "categorical_crossentropy"
metrics        = ["dice_coef_multiclass"]

show_summary   = False

[dataset]
class_name    = "ImageCategorizedMaskDataset"

[train]
epochs        = 100
batch_size    = 2


; EarlyStopping parameter
patience      = 10

metrics       = ["dice_coef_multiclass", "val_dice_coef_multiclass"]

model_dir     = "./models/"
eval_dir      = "./eval/"
images_dir    = "../../../dataset/MBH-Seg25/train/images/"
masks_dir     = "../../../dataset/MBH-Seg25/train/masks/"

create_backup  = False

; learning_rate_reducer callback parameter
learning_rate_reducer = True
reducer_factor     = 0.5
reducer_patience   = 4

epoch_change_infer     = True
epoch_change_infer_dir =  "./epoch_change_infer"
num_infer_images       = 6

; Model saving option
save_weights_only  = True

[valid]
images_dir = "../../../dataset/MBH-Seg25/valid/images/"
masks_dir  = "../../../dataset/MBH-Seg25/valid/masks/"

[test] 
images_dir = "../../../dataset/MBH-Seg25/test/images/"
masks_dir  = "../../../dataset/MBH-Seg25/test/masks/"

[infer] 
images_dir    = "./mini_test/images/"
output_dir    = "./mini_test_output/"

[image]
color_order = "RGB"

[mask]
mask_file_format = ".png"
; 1+5 classes
;          BGR color
;    EDH = (0, 0, 255)    #red
;    IPH = (255, 0, 0)    #blue
;    IVH = (0,  255, 255)  #yellow
;    SAH = (255, 255, 0)  #cyan
;    SDH = (0, 2255,  0)   #green  
;                     EDH:red,    IPH:blue    IVH:yellow     SAH:cyan,   SDH:green
rgb_map = {(0,0,0):0,(255,0,0):1,(0,0,255):2, (255,255,0):3, (0,255,255):4,(0,255,0):5}


